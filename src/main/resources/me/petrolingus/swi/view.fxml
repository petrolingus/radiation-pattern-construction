<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.petrolingus.swi.Controller">
   <children>
      <Canvas fx:id="canvas" height="400.0" width="400.0" />
      <VBox>
         <children>
            <Slider fx:id="slider1" blockIncrement="0.01" majorTickUnit="0.5" max="1.0" minorTickCount="4" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="0.1" />
            <Slider fx:id="slider2" blockIncrement="0.01" majorTickUnit="0.5" max="5.0" minorTickCount="4" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="2.0" />
            <Slider fx:id="slider3" blockIncrement="0.01" majorTickUnit="0.5" max="1.0" minorTickCount="4" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="0.01" />
         </children>
      </VBox>
   </children>
</HBox>
